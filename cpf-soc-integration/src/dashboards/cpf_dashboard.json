{
  "dashboard": {
    "title": "CPF Risk Monitor",
    "version": "1.0",
    "refresh_interval": 30,
    "panels": [
      {
        "id": "overall_risk",
        "type": "gauge",
        "title": "Overall CPF Risk Score",
        "query": "index=cpf_metrics | stats avg(risk_score)",
        "thresholds": {
          "green": 0.3,
          "yellow": 0.6,
          "red": 0.8
        }
      },
      {
        "id": "category_breakdown",
        "type": "bar_chart",
        "title": "Risk by Category",
        "categories": [
          "Authority",
          "Temporal",
          "Social",
          "Cognitive",
          "Group Dynamics",
          "Stress",
          "Unconscious",
          "AI Bias",
          "Convergent"
        ]
      },
      {
        "id": "predictions",
        "type": "table",
        "title": "Predicted Incidents (72hr)",
        "columns": ["Incident Type", "Probability", "Time to Event", "Action"]
      }
    ]
  }
}
